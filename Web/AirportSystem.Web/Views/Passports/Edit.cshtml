@model AirportSystem.Services.Data.InputModels.PassportInputModel

@{
    this.ViewData["Title"] = "Fill passport details";
}

    <h1>Edit your passport details</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-md-6">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="CreatedOn"></label>
        <input asp-for="CreatedOn" class="form-control" />
        <span asp-validation-for="CreatedOn" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="ExpiresOn"></label>
        <input asp-for="ExpiresOn" class="form-control" />
        <span asp-validation-for="ExpiresOn" class="text-danger"></span>
    </div>

    <input type="submit" class="btn btn-primary" />

</form>
