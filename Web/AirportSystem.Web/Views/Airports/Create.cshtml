@model AirportSystem.Services.Data.InputModels.AirportInputModel
@inject AirportSystem.Services.Data.CitiesAndCountries.ICityService service
@{
    this.ViewData["Title"] = "Create airport";
    var cities = this.service.GetAll();
}

<h1>Create new airport</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group col-md-12">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="CityId"></label>
                <input asp-for="CityId" class="form-control" />
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-block btn-primary text-white mb-3">Create</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2 class="text-center black-color">Cities</h2>
        <table class="table table-hover" id="dataTable">
            <thead>
                <tr>
                    <th scope="col">Citi id</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in cities)
                {
                    <tr class="table-light">
                        <th scope="row">@item.Id</th>
                        <th scope="row">@item.Name</th>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts
                    {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });</script>
}
