@using Microsoft.Extensions.Options
@inject IOptions<AirportSystem.Web.StripeProps.StripeSettings> Stripe
@model PaymentViewModel

<div class="text-center">
    <h1>Payment</h1>
    <br />
    <h1>Please click on pay button and enter your details</h1>
</div>

<div class="text-center">
    <form asp-action="Charge" asp-controller="Stripe" method="post">
        <article>
            @*<label>Amount:@Model.Price</label>*@
            <input hidden asp-for="Price" class="form-control" />
            <input hidden asp-for="TicketId" class="form-control"  />
        </article>
        <script src="//checkout.stripe.com/v2/checkout.js"
                class="stripe-button"
                data-key="@Stripe.Value.PublishableKey"
                data-locale="auto"
                data-decprition="Sample Charge"
                  >
        </script>
    </form>
</div>
