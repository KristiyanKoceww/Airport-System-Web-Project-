@model CreateSeatViewModel
@using AirportSystem.Data

@{
    this.ViewData["Title"] = "Create Seat";
}

<h1 class="text-center">Create seat</h1>
<br />

<div class="container">
    <div class="row justify-content-md-center">
        <div class="column">

            <form method="post" enctype="multipart/form-data" class="column-2">
                <div asp-validation-summary="All" class="text-danger"></div>


                <div class="form-group col-md-12">
                    <label asp-for="@Model.SeatsCount"></label>
                    <input asp-for="@Model.SeatsCount" class="form-control" />
                    <span asp-validation-for="@Model.SeatsCount" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <label asp-for="@Model.PlaneId"></label>
                    <input asp-for="@Model.PlaneId" class="form-control" />
                    <span asp-validation-for="@Model.PlaneId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="@Model.IsAvailable"></label>
                    <input asp-for="@Model.IsAvailable" class="form-control" />
                    <span asp-validation-for="@Model.IsAvailable" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-block btn-primary text-white mb-3">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>






