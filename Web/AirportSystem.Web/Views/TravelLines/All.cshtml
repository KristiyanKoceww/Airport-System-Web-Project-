@inject AirportSystem.Services.Data.TravelLines.ITravelLinesService service

@{
    this.ViewData["Title"] = "All lines";
}

<h1>All lines</h1>
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="page-header text-center">
                    <h2 id="tables">Lines</h2>
                </div>

                <div class="component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Id</th>
                                <th scope="col">Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var travelLines = this.service.GetAll();
                            }
                            @foreach (var item in travelLines)
                            {
                                <tr class="table-light">
                                    <th scope="row">@item.CityId</th>
                                    <td>@item.CityName</td>
                                    <td>@item.City2Id</td>
                                    <td>@item.CityName2</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
