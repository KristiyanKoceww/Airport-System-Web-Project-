@model AirportSystem.Services.Data.InputModels.TravelLineInputModel
@inject AirportSystem.Services.Data.CitiesAndCountries.ICityService service

@{
    this.ViewData["Title"] = "Create travel line";
    var cities = this.service.GetAll();
}

<h1>Create new travel line</h1>
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group col-md-6">
                <label asp-for="CityId"></label>
                <input asp-for="CityId" class="form-control" />
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="CityName"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="City2Id"></label>
                <input asp-for="City2Id" class="form-control" />
                <span asp-validation-for="City2Id" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="City2Name"></label>
                <input asp-for="City2Name" class="form-control" />
                <span asp-validation-for="City2Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-block btn-primary text-white mb-3">Create</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2 class="text-center">Cities</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Citi id</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in cities)
                {
                    <tr class="table-light">
                        <th scope="row">@item.Id</th>
                        <th scope="row">@item.Name</th>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
