
@model AirportSystem.Services.Data.InputModels.GetFlightByIdInputModel

@{
    this.ViewData["Title"] = "Information about flight";
}

<h1> Flight </h1>

<form method="post">
    <div class="container">
        <div class="section">
            <div class="row">
                <div>
                    <div class="page-header text-center">
                        <h2 id="tables">Flight</h2>
                    </div>
                    <div class="form-group col-md-10">
                        <label asp-for="Id"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>
