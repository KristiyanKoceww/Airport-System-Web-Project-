
@model AirportSystem.Services.Data.InputModels.GetFlightByIdInputModel

@{
    this.ViewData["Title"] = "Information about flight";
}

<h1 class="text-center"> Flight </h1>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="column">
            <form method="post" class="text-center">
                <div class="container">
                    <div class="section">
                        <div class="row">
                            <div>
                                <div class="page-header text-center">
                                    <h2 id="tables">Flight</h2>
                                </div>
                                <div class="form-group align-self-center">
                                    <label asp-for="Id"></label>
                                    <input asp-for="Id" class="form-control text-center" />
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>