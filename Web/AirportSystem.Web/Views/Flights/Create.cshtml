@model AddFlightViewModel
@inject AirportSystem.Services.Data.TravelLines.ITravelLinesService service
@using AirportSystem.Data

@{
    this.ViewData["Title"] = "Create flight";
}
@{
    var lines = this.service.GetAll();
}

<h1>Create flight</h1>

<div class="row">
    <div class="col-md-6">

        <form method="post" enctype="multipart/form-data" class="column-2">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group col-md-6">
                <label asp-for="@Model.TravelLineCityId"></label>
                <input asp-for="@Model.TravelLineCityId" class="form-control" />
                <span asp-validation-for="@Model.TravelLineCityId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@Model.TravelLineCity2Id"></label>
                <input asp-for="@Model.TravelLineCity2Id" class="form-control" />
                <span asp-validation-for="@Model.TravelLineCity2Id" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="DepartureTime"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ArrivalTime"></label>
                <input asp-for="ArrivalTime" class="form-control" />
                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="FlightDuration"></label>
                <input asp-for="FlightDuration" class="form-control" />
                <span asp-validation-for="FlightDuration" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="FlightStatus"></label>
                <select asp-for="FlightStatus" class="form-control"
                        asp-items="@Html.GetEnumSelectList<FlightStatus>()">
                    <option>Select type ...</option>
                </select>
                <span asp-validation-for="FlightStatus" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="PlaneId"></label>
                <input asp-for="PlaneId" class="form-control" />
                <span asp-validation-for="PlaneId" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <input type="submit" class="btn btn-primary" />
        </form>

    </div>

    <div class="col-md-6">
        <h2 class="text-center">Travel Lines</h2>
        <table class="table table-hover" id="dataTable">
            <thead>
                <tr>
                    <th scope="col">Origin id</th>
                    <th scope="col">Origin</th>
                    <th scope="col">Destination id</th>
                    <th scope="col">Destination</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in lines)
                {
                    <tr class="table-light">
                        <th scope="row">@item.CityId</th>
                        <th scope="row">@item.CityName</th>
                        <th scope="row">@item.City2Id</th>
                        <th scope="row">@item.CityName2</th>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts
                    {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });</script>
}






