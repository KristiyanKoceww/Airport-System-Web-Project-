@inject AirportSystem.Services.Data.CitiesAndCountries.ICountryService country

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="page-header text-center">
                    <h2 id="tables">Countries</h2>
                </div>

                <div class="component">
                    <table class="table table-hover" id="dataTable">
                        <thead>
                            <tr>
                                <th scope="col">Country Id</th>
                                <th scope="col">Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var countries = country.GetAll();
                            }
                            @foreach (var item in countries)
                            {

                                <tr class="table-light">
                                    <th scope="row">@item.Id</th>
                                    <td>@item.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
                    {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });</script>
}