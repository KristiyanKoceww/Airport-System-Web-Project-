@using AirportSystem.Data.Planes
@model AirportSystem.Services.Data.InputModels.AddPlaneToAvioCompanyInputModel

@{
    this.ViewData["Title"] = "Add plane to avio company";
}

<h1>Add plane to avio company</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-md-6">
        <label asp-for="AvioCompanyId"></label>
        <input asp-for="AvioCompanyId" class="form-control" />
        <span asp-validation-for="AvioCompanyId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>


    <div class="form-group col-md-6">
        <label asp-for="SeatsCount"></label>
        <input asp-for="SeatsCount" class="form-control" />
        <span asp-validation-for="SeatsCount" class="text-danger"></span>
    </div>


    <div class="form-group col-md-6">
        <div>
            <label asp-for="Type"></label>
        </div>
        <select asp-for="Type" class="form-control"
                asp-items="@Html.GetEnumSelectList<PlaneType>()">
            <option>Select type ...</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>


    <br />
    <br />
    
    <div class="form-group col-md-6">
        <label asp-for="IsPlaneAvailable"></label>
        <input asp-for="IsPlaneAvailable" class="form-control" />
        <span asp-validation-for="IsPlaneAvailable" class="text-danger"></span>
    </div>


    <div class="d-flex justify-content-md-center">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3">Create</button>
    </div>

</form>
