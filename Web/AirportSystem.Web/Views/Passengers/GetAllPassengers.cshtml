@model IEnumerable<AirportSystem.Data.Passenger>

@{

    this.ViewData["Title"] = "All passengers";
}

<h1>All passengers</h1>
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="page-header text-center">
                    <h2 id="tables">Passengers</h2>
                </div>

                <div class="component">
                    <table class="table table-hover table-bordered" id="dataTable">
                        <thead>
                            <tr class="table-warning ">
                                <th scope="col">Id</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Middle Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Address</th>
                                <th scope="col">Age</th>
                                <th scope="col">PassportId</th>
                                <th scope="col">Gender</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                            @foreach (var item in Model)
                            {
                                <tr class="table-hover">
                                    <td class="bg-warning" scope="row">@item.Id</td>
                                    <td class="bg-warning" scope="row">@item.FirstName</td>
                                    <td class="bg-warning" scope="row">@item.MiddleName</td>
                                    <td class="bg-warning" scope="row">@item.LastName</td>
                                    <td class="bg-warning" scope="row">@item.Phone</td>
                                    <td class="bg-warning" scope="row">@item.Address</td>
                                    <td class="bg-warning" scope="row">@item.Age</td>
                                    <td class="bg-warning" scope="row">@item.PassportId</td>
                                    <td class="bg-warning" scope="row">@item.Gender</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
                    {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();
        });</script>
}
