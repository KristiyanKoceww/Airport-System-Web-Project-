@model AirportSystem.Services.Data.InputModels.PlaneInputModel
@using AirportSystem.Data.Planes

@{
    this.ViewData["Title"] = "Create plane";
}

<h1 class="text-center">Create new plane</h1>
<br />
<div class="container">
    <div class="row justify-content-md-center">
        <div class="column">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group col-md-12">
                    <label asp-for="Make"></label>
                    <input asp-for="Make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="SeatsCount"></label>
                    <input asp-for="SeatsCount" class="form-control" />
                    <span asp-validation-for="SeatsCount" class="text-danger"></span>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="IsPlaneAvailable"></label>
                    <input asp-for="IsPlaneAvailable" class="form-control" />
                    <span asp-validation-for="IsPlaneAvailable" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group col-md-12">
                    <div>
                        <label asp-for="Type"></label>
                    </div>
                    <select asp-for="Type" class="form-control"
                            asp-items="@Html.GetEnumSelectList<PlaneType>()">
                        <option>Select type ...</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <br />
                <br />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-block btn-primary text-white mb-3">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>