@model AirportSystem.Services.Data.InputModels.PlaneInputModel
@using AirportSystem.Data.Planes

@{
    this.ViewData["Title"] = "Create plane";
}

<h1>Create new plane</h1>

<form method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-md-6">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Seats"></label>
        <input asp-for="Seats" class="form-control" />
        <span asp-validation-for="Seats" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="IsPlaneAvailable"></label>
        <input asp-for="IsPlaneAvailable" class="form-control" />
        <span asp-validation-for="IsPlaneAvailable" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control"
                asp-items="@Html.GetEnumSelectList<PlaneType>()">
            <option>Select type ...</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3">Create</button>
    </div>
</form>